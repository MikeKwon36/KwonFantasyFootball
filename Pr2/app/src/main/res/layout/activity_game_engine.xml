<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.kwon.mike.pr2.GameEngineActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/xmlScoreBoardTeamATitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="TEAM A"/>
            <TextView
                android:id="@+id/xmlScoreBoardTeamAScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="70sp"
                android:text="00"
                android:contentDescription="This is team A's current score"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/xmlScoreBoardQuarterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="QTR"/>
            <TextView
                android:id="@+id/xmlScoreBoardQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:text="1"
                android:contentDescription="This is the current quarter of the game"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/xmlScoreBoardTeamBTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="TEAM B"/>
            <TextView
                android:id="@+id/xmlScoreBoardTeamBScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="70sp"
                android:text="00"
                android:contentDescription="This is team B's current score"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/xmlStadiumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Stadium: "/>
        <TextView
            android:id="@+id/xmlStadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:contentDescription="This is the stadium where your game is being player"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/xmlWeatherLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Weather: "/>
        <TextView
            android:id="@+id/xmlWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:contentDescription="This is the current weather conditions for your game"/>
    </LinearLayout>

    <TextView
        android:id="@+id/xmlGameStatsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="GAME STATS"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/xmlGameStatsPlayerATitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#07de03"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Player(A)"/>
        <TextView
            android:id="@+id/xmlGameStatsPlayerATDs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="#07de03"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="TD's "/>
        <TextView
            android:id="@+id/xmlGameStatsPlayerBTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#07de03"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Player(B)"/>
        <TextView
            android:id="@+id/xmlGameStatsPlayerBTDs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="#07de03"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="TD's "/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerA_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:paddingRight="-3dp"
                android:layout_weight="5"
                android:textSize="12sp"
                android:contentDescription="This is team A's first drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerA_1_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team A's first drafted player's touchdowns"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerB_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingRight="-3dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:contentDescription="This is team B's first drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerB_1_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team B's first drafted player's touchdowns"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerA_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingRight="-3dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:contentDescription="This is team A's second drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerA_2_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team A's second drafted player's touchdowns"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerB_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingRight="-3dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:contentDescription="This is team B's second drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerB_2_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team B's second drafted player's touchdowns"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerA_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingRight="-3dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:contentDescription="This is team A's third drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerA_3_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team A's third drafted player's touchdowns"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xmlPlayerB_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingRight="-3dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:contentDescription="This is team B's third drafted player"/>
            <TextView
                android:id="@+id/xmlPlayerB_3_TDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:contentDescription="This is team B's third drafted player's touchdowns"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/xmlGameFacilitator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:contentDescription="This is a clickable text that controls the game state"/>

</LinearLayout>
